                  <div class="swiper-slide">
                    {% if partner.destination %}
                      <a href="{{ partner.destination }}" target="_blank">
                        <img src="{{ partner.partnerLogo.one().getUrl() }}" class="img-fluid" alt="{{ partner.partnerName }}">
                      </a>
