{% if featured %}

<section class="featured-story">
    <div class="featured-story__flex content-column">
        <div class="featured-story__content">
            <h2>{{ featured.title }}</h2>

            <p>
                {{ featured.excerpt}}
            </p>

            <p>
                <a href="{{ featured.url }}" class="cta-link">{{ "Discover the full story"|t }}</a>
            </p>
        </div>

        <div class="featured-story__slider">
            {% include "_includes/components/slider" with {
                photos: featured.slider.all()
            } %}
        </div>

    </div>
</section>
{% endif %}