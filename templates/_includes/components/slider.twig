<!-- Slider Component -->
<div class="slider">
    <div class="slider__nav">
        <button type="button" class="slider__prev">
            <img src="{{ siteUrl }}assets/images/arrow-prev.svg" alt="Previous" />
        </button>
        <button type="button" class="slider__next">
            <img src="{{ siteUrl }}assets/images/arrow-next.svg" alt="Next" />
        </button>
    </div>
  
    <div class="slider__reel">
        {% for photo in photos %}
            <img src="{{ photo.getUrl({ width:1200, quality:70 }) }}" alt="{{ photo.title }}" class="slider__image" />
        {% endfor %}
    </div>
</div>