{% extends "_layouts/base" %}

{% block body %}

  <!-- ======= Header ======= -->
  <header id="header" class="header fixed-top">
    <div class="container-fluid container-xl d-flex align-items-center justify-content-between">

      <a href="./" class="logo d-flex align-items-center">
        <img src="{{ siteUrl }}assets/img/logo.png" alt="">
        <span>FlexStart</span>
      </a>

      <nav id="navbar" class="navbar">
        <ul>
            {% if header.menuItems %}
            
              {% for menuItem in header.menuItems.all() %}
                <li><a class="nav-link scrollto" href="{{ menuItem.destination.one().url }}">{{ menuItem.menuLabel }}</a></li>
              {% endfor %}

              {% if currentUser %}
                <li><a class="nav-link scrollto" href="{{ siteUrl }}vip">VIP</a>
                <li class="dropdown"><a href="#"><span>Profile</span> <i class="bi bi-chevron-down"></i></a>
                <ul>
                  <li><a href="{{ siteUrl }}profileInfo" class="nav-link">{{ currentUser.username }}</a></li>
                  <li><a href="{{ logoutUrl }}">Logout</a></li>
              {% else %}
                  <li><a href="{{ siteUrl }}login" class="nav-link scrollto">Login</a></li>
                  <li><a href="{{ siteUrl }}register" class="nav-link scrollto">Register</a></li>
                </ul>
              {% endif %}

            {% endif %}
        </ul>
        <i class="bi bi-list mobile-nav-toggle"></i>
      </nav><!-- .navbar -->

    </div>
  </header><!-- End Header -->
  {% block content %}{% endblock %}

  <!-- ======= Footer ======= -->
  <footer id="footer" class="footer">

    <div class="container">
      <div class="copyright">
        {{footer.disclaimer|raw}}
      </div>

    </div>
  </footer><!-- End Footer -->

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <!-- Vendor JS Files -->
  <script src="{{ siteUrl }}assets/vendor/purecounter/purecounter_vanilla.js"></script>
  <script src="{{ siteUrl }}assets/vendor/aos/aos.js"></script>
  <script src="{{ siteUrl }}assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="{{ siteUrl }}assets/vendor/glightbox/js/glightbox.min.js"></script>
  <script src="{{ siteUrl }}assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
  <script src="{{ siteUrl }}assets/vendor/swiper/swiper-bundle.min.js"></script>
  <script src="{{ siteUrl }}assets/vendor/php-email-form/validate.js"></script>

  <!-- Template Main JS File -->
  <script src="{{ siteUrl }}assets/js/main.js"></script>

</body>
</html>


{% endblock %}
